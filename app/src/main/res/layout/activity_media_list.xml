<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.emotions.database.emotionsdatabase.MediaList">



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:text="How many media activity you are engaging ( in past half an hour)."
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="(Tick whichever you are engaged with, if no media involved then tick ‘no media activity’)"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cbNoMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No media activity"/>
                <CheckBox
                    android:id="@+id/cbPrintMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading print media (E-books, or hard copy )"/>
                <CheckBox
                    android:id="@+id/cbTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watching Television, video, and//or DVD’s (on a TV)"/>
                <CheckBox
                    android:id="@+id/cbVidCom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watching video on a computer (you tube etc)"/>
                <CheckBox
                    android:id="@+id/cbMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listening to music"/>
                <CheckBox
                    android:id="@+id/cbAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listening to non musical audio (news, radio, podcasts etc)"/>
                <CheckBox
                    android:id="@+id/cbGames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playing video, computer or mobile games"/>
                <CheckBox
                    android:id="@+id/cbPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talking on phone (mobile, video conferencing etc)"/>
                <CheckBox
                    android:id="@+id/cbInstMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant messaging (watsapp, google talk, skype etc)"/>
                <CheckBox
                    android:id="@+id/cbTextMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text message using mobile"/>
                <CheckBox
                    android:id="@+id/cbEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading and writing e-mail"/>
                <CheckBox
                    android:id="@+id/cbWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web surfing, pdfs etc"/>
                <CheckBox
                    android:id="@+id/cbComApps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Using computer application (word processing, programming etc)"/>
                <CheckBox
                    android:id="@+id/cbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other media activity"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnNextMediaList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp"/>
    </LinearLayout>



</RelativeLayout>
